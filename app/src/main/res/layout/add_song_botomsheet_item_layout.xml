<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="10sp"
    android:paddingHorizontal="30sp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/playlist_icon_bottom_box"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/ic_playlist"
        android:layout_marginEnd="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playlist_name_bottom_box"/>

    <TextView
        android:id="@+id/playlist_name_bottom_box"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:alpha="0.7"
        android:layout_marginStart="10sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlist_icon_bottom_box"
        />

</androidx.constraintlayout.widget.ConstraintLayout>