<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".changeStyleFragments.SongListStyleFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        app:cardCornerRadius="20sp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/change_style_background_layout"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@id/guideline_h_10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintGuide_percent="0.1"
                android:orientation="horizontal"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@id/guideline_h_20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintGuide_percent="0.2"
                android:orientation="horizontal"/>

            <ImageView
                android:id="@id/change_style_back"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:background="@drawable/circle_background"
                android:foreground="@drawable/ic_back"
                android:foregroundTint="#000000"
                android:backgroundTint="#7700FF"
                android:layout_margin="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintBottom_toTopOf="@id/guideline_h_10"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@id/change_style_options"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:background="@drawable/circle_background"
                android:foreground="@drawable/ic_options"
                android:foregroundTint="#000000"
                android:backgroundTint="#7700FF"
                android:layout_margin="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintBottom_toTopOf="@id/guideline_h_10"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@id/change_style_search_box"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:foreground="#FFFFFF"
                android:foregroundTint="#000000"
                android:layout_margin="10sp"
                app:layout_constraintTop_toBottomOf="@id/guideline_h_10"
                app:layout_constraintBottom_toTopOf="@id/guideline_h_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/change_style_clear_button"
                />

            <ImageView
                android:id="@id/change_style_clear_button"
                android:layout_width="70sp"
                android:layout_height="0sp"
                android:foreground="#FFFFFF"
                android:foregroundTint="#000000"
                android:layout_margin="10sp"
                app:layout_constraintTop_toBottomOf="@id/guideline_h_10"
                app:layout_constraintBottom_toTopOf="@id/guideline_h_20"
                app:layout_constraintStart_toEndOf="@id/change_style_search_box"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:foreground="#808080"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/guideline_h_20"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/change_style_list_items_container"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:layout_width="0sp"
                android:layout_height="0sp"
                app:layout_constraintTop_toBottomOf="@id/guideline_h_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_h_12_5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintGuide_percent="0.125"
                    android:orientation="horizontal"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@id/guideline_h_25"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintGuide_percent="0.25"
                    android:orientation="horizontal"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/guideline_h_12_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/change_style_item_background1"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/change_style_item_title1"
                            android:layout_width="0sp"
                            android:layout_height="0sp"
                            android:layout_marginVertical="5sp"
                            android:layout_marginHorizontal="10sp"
                            android:foreground="#FFFFFF"
                            android:foregroundTint="#000000"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/change_style_item_icon1"
                            app:layout_constraintBottom_toTopOf="@id/change_style_item_desc1"/>

                        <ImageView
                            android:id="@+id/change_style_item_desc1"
                            android:layout_width="0sp"
                            android:layout_height="0sp"
                            android:layout_marginVertical="5sp"
                            android:layout_marginHorizontal="10sp"
                            android:foreground="#FFFFFF"
                            android:foregroundTint="#000000"
                            app:layout_constraintTop_toBottomOf="@id/change_style_item_title1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/change_style_item_icon1"/>

                        <ImageView
                            android:id="@+id/change_style_item_icon1"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:foreground="@drawable/ic_playlist_add"
                            android:foregroundTint="#00FFFF"
                            android:layout_margin="10sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="10sp"
                    app:layout_constraintTop_toBottomOf="@id/guideline_h_12_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/guideline_h_25">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/change_style_item_background2"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/change_style_item_title2"
                            android:layout_width="0sp"
                            android:layout_height="0sp"
                            android:layout_marginVertical="5sp"
                            android:layout_marginHorizontal="10sp"
                            android:foreground="#FFFFFF"
                            android:foregroundTint="#000000"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/change_style_item_icon2"
                            app:layout_constraintBottom_toTopOf="@id/change_style_item_desc2"/>

                        <ImageView
                            android:id="@+id/change_style_item_desc2"
                            android:layout_width="0sp"
                            android:layout_height="0sp"
                            android:layout_marginVertical="5sp"
                            android:layout_marginHorizontal="10sp"
                            android:foreground="#FFFFFF"
                            android:foregroundTint="#000000"
                            app:layout_constraintTop_toBottomOf="@id/change_style_item_title2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/change_style_item_icon2"/>

                        <ImageView
                            android:id="@+id/change_style_item_icon2"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:foreground="@drawable/ic_playlist_add"
                            android:foregroundTint="#00FFFF"
                            android:layout_margin="10sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>