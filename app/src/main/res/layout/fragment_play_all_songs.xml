<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/play_all_songs_container"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:paddingHorizontal="10sp"
    android:layout_alignParentTop="true"
    android:background="?android:attr/selectableItemBackground"

    >

    <ImageView
        android:id="@+id/play_all_songs_icon"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:foreground="@drawable/round_play_circle"
        android:foregroundTint="#FF0000"
        android:background="#00000000"/>

    <TextView
        android:id="@+id/play_all_songs_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginHorizontal="10sp"
        android:textStyle="bold"
        android:text="Play all songs"
        android:textColor="#FF0000"/>

    <TextView
        android:id="@+id/play_all_songs_number"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:gravity="center"
        android:text="0 songs"
        android:textColor="#B37E7E7E"/>

</LinearLayout>