<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15sp"
    android:foregroundTint="#00000000"
    android:backgroundTint="#00000000">


    <Button
        android:id="@+id/main_search_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:cornerRadius="15sp"
        android:insetBottom="0sp"
        android:insetLeft="0sp"
        android:insetRight="0sp"
        android:insetTop="0sp"
        android:layout_marginHorizontal="10sp"
        android:foreground="@drawable/ic_search"
        android:foregroundTint="#000000"
        android:backgroundTint="#7700FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_options_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/main_options_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:cornerRadius="15sp"
        android:insetBottom="0sp"
        android:insetLeft="0sp"
        android:insetRight="0sp"
        android:insetTop="0sp"
        android:foreground="@drawable/ic_options"
        android:foregroundTint="#000000"
        android:backgroundTint="#7700FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>