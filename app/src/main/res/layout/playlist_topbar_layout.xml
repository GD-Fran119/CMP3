<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/playlist_back_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:cornerRadius="15sp"
        android:insetBottom="0sp"
        android:insetLeft="0sp"
        android:insetRight="0sp"
        android:insetTop="0sp"
        android:foreground="@drawable/ic_back"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10sp"/>

    <Button
        android:id="@+id/playlist_options_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:cornerRadius="15sp"
        android:insetBottom="0sp"
        android:insetLeft="0sp"
        android:insetRight="0sp"
        android:insetTop="0sp"
        android:foreground="@drawable/ic_options"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>